//checking if a value is present in an array
bool search (int *a,int n,int target)
{
    for(int i=0;i<n;i++)
    {
        if(*(a+i)==target)
        {
            return true;
        }
        
    }
    return false;
}
int main()
{
    int a[5]={1,2,3,4,5};
    int target = 3;
    int n = sizeof(a)/sizeof(a[0]);
     if(search(a,n,target))
     {
         cout<<"Present";
     }
     else
     cout<<"Not present";
}
